{
  "env": {
    "node": true,
    "es2022": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "commonjs"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-undef": "error",
    "prefer-const": "warn",
    "no-var": "error",
    "eqeqeq": "warn",
    "curly": "warn",
    "consistent-return": "warn",
    "no-empty-function": "warn",
    "require-await": "warn",
    "arrow-spacing": "error",
    "no-duplicate-imports": "error",
    "prefer-template": "warn",
    "template-curly-spacing": "error"
  }
}
